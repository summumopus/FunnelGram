{
    "version": 2,
    "name": "funnelgram-webapp",
    "builds": [
        {
            "src": "**/*.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Frame-Options",
                    "value": "SAMEORIGIN"
                },
                {
                    "key": "Content-Security-Policy",
                    "value": "default-src 'self' 'unsafe-inline' 'unsafe-eval' https://telegram.org https://*.supabase.co; connect-src 'self' https://*.supabase.co https://telegram.org;"
                }
            ]
        }
    ]
}